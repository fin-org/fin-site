# collections can be either. they're
# expanded if any element is expanded

expanded_array [
  # this comment expands the array!
  # elements are indented on each line
  # use , for multiple elements per line
  1, 2
]

ex_map (
  in_arr [all, elements, "are inline"]
  ex_arr [
    | this raw string forces ex_arr
    | and ex_map to expand!
  ]
)
