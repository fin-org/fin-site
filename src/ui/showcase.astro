---
interface Props {
  id?: string;
  flip?: boolean;
}

const { flip = false, id } = Astro.props;
---

<div id={id} class="mx-auto w-full max-w-7xl pt-8 sm:py-20">
  <div
    class:list={[
      "flex flex-col items-center justify-center gap-4 sm:gap-12 lg:px-8",
      flip ? "lg:flex-row-reverse" : "lg:flex-row",
    ]}
  >
    <div class="w-full max-w-prose px-4 sm:px-8 lg:px-0">
      <slot name="content" />
    </div>
    <div
      class="w-full overflow-x-auto bg-gray-3 p-4 text-sm leading-tight sm:max-w-lg sm:rounded-lg dark:bg-grayDark-3"
    >
      <slot name="code" />
    </div>
  </div>
</div>
